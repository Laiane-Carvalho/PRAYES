<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <!--<style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">-->
    <!--&lt;!&ndash; Customize your theme here. &ndash;&gt;-->
    <!--&gt;-->
    <!--</style>-->
    <style name="MyThemePryers" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="windowNoTitle">true</item>
        <item name="colorPrimary">#030303</item>
        <item name="colorPrimaryDark">#303030</item>
        <item name="colorAccent">#aeadad</item>
        <item name="android:textColor">#060606</item>
        <item name="android:textColorSecondary">#7b7a7a</item>
        <item name="android:colorControlActivated">#f5ee83</item> <!--< detalhes da seleccao-->
        <item name="android:colorControlHighlight">#f5ee83</item><!--<clique dos itens tollbar e lista-->
        <item name="android:colorControlNormal">#818180</item><!--<cor barra lateral-->
        <item name="android:colorForeground">#ce4e09</item> <!--<corNomeToolbar-->
        <item name="android:colorEdgeEffect">@color/colorPrimaryDark</item> <!--<cor base texto quando esticado-->
        <item name="android:colorSecondary" tools:ignore="NewApi">#f5d95e</item>
        <item name="android:colorError" tools:ignore="NewApi">#d20b9d</item>
        <item name="android:statusBarColor">#131313</item>
    </style>

    <style name="MyThemeList" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:textColor">#131312</item>
        <item name="windowNoTitle">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">15dp</item>
        <item name="android:padding">10dp</item>

    </style>

    <style name="MyThemeButtons" parent="Theme.AppCompat.Light">
        <item name="android:textColor">#c1c1c0</item>
        <!--<item name="android:windowNoTitle">true</item>-->
        <item name="android:gravity">start</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:textSize">15dp</item>
        <item name="android:colorControlActivated">#9af8ff</item>
        <item name="android:colorControlHighlight">#71e11c</item>
        <item name="android:fontFamily">casual</item>
    </style>

    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">

        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
        <item name="colorAccent">#00BCD4</item>

    </style>
    <style name="MyThemePryers.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="MyThemePryers.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />


</resources>
