<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="testeadapt3.cursoandroid2.com.pray.activities.MostrarAjudaDoutrinariaSelecionadaActivity"
    tools:showIn="@layout/mostrar_ajuda_doutrinaria_selecionada">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="6"/>

        <WebView
            android:id="@+id/webView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="20dp"
            android:layout_weight="3">

        </WebView>
        <Button
            android:id="@+id/botaoProximoVideo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/botoes_customizados"
            android:padding="20dp"
            android:layout_margin="10dp"
            android:text="proximo"/>

    </LinearLayout>

</android.support.constraint.ConstraintLayout>