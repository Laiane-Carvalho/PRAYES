<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="testeadapt3.cursoandroid2.com.pray.activities.ActivityMostrarAjudaSelecionada">

    <!--<include-->
    <!--android:id="@+id/tollbarmostrarOracoesSelecionadas"-->
    <!--layout="@layout/toolbar"></include>-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layoutBarraSuperiorVideos">

        <ImageButton
            android:id="@+id/btnReturnOracoes"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/details"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:src="@drawable/ic_arrow_back_black_24dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/textViewTituloOracoes"
            android:text="Teste"
            android:textSize="12dp"
            android:layout_weight="1"
            android:layout_margin="10dp"
            android:layout_gravity="center"
            android:padding="4dp"/>

        <ImageButton
            android:id="@+id/btnMenu"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:background="@drawable/details"
            android:clickable="true"
            android:focusable="true"
            android:padding="20dp"
            android:src="@drawable/ic_more_24dp" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="5dp"
        android:background="@drawable/trasparencia_livro_oracoes"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="7dp"
            >

            <TextView
                android:id="@+id/textViewMostarOracoes"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:fontFamily="casual"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="6dp"
                android:layout_marginBottom="5dp"
                android:gravity="start"
                android:text="teste"
                android:textSize="16dp"
                android:clickable="true"/>
            <!--android:textColor="@color/cororOracoesDiarias"-->

        </ScrollView>
    </LinearLayout>


</LinearLayout>
